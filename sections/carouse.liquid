<section  class="container-fluid banner-header">
  <div  id="demo" class="carousel slide" data-ride="carousel">
    
    <div class=" carousel-inner">
      {% for block in section.blocks %}
      <div class=" carousel-item {% if forloop.first %} active {%endif%} ">
        <div class="row" >
          <div class="content-text-banner col-md-5 col-sm-12 col-12">
            <div class="main-content-text-banner">
              <h3 class="title-text-banner">{{block.settings.tilte}}</h3>
              <p class="content-text-banner-m">{{block.settings.content}}</p>
              <button class="btn-shop-noww"><a  href="">
                Shop now
              </a></button>
            </div>
          </div> 
          <img class=" img-banner-header col-md-7 col-sm-12 col-12" src="{{block.settings.image | img_url: 'master'}}">
        </div>
      </div>
      {% endfor %}
    </div>
    <ul class="button-sliderr " >
      {% for block in section.blocks %}
      <li  data-target="#demo" data-slide-to="{{forloop.index}}" {%if forloop.index == 0 %} class="active" {%endif%}><i class="fa-solid fa-circle"></i></li>
        {% endfor %}
    </ul>
  </div>
</section>
{% schema %}
{
 "name": "Image Slider",
"max_blocks": 5,
"settings": [
  {
     "type": "header",
     "content": "Image Slider"
  }
],
"blocks": [
  {
      "name": "Image",
      "type": "image",
      "settings": [
          {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
          },
          {
              "type": "text",
              "id": "tilte",
              "label": "Image tilte"
          },
          {
            "type": "text",
            "id": "content",
            "label": "Image content"
        }
      ]
  }
  ],
"presets": [
  {
      "category": "Image",
      "name":"Image Slider"
  }
]
}
{% endschema %}