<section>
  <div class="container-fluid">
    <div class="best-saller row d-flex justify-content-center">
      <!-- <div class="col-sm-5">
        <div class="row"> sdfg</div>
        <div class="row">sdfghjk</div>
      </div>
      <div class="col-sm-5">
        {% if section.settings.video_oanh != blank %}
        <div class="best-saler-video">
          <iframe width="100%" height="828px"  src="{{section.settings.video_oanh}}" title="YouTube video player" frameborder="0" 
           allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
